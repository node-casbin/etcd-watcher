{
  "name": "etcd-watcher",
  "version": "1.0.0",
  "description": "Etcd watcher for node-casbin",
  "main": "lib/watcher.js",
  "typings": "lib/watcher.d.ts",
  "scripts": {
    "prepack": "yarn run lint && yarn run test && yarn build",
    "postpack": "rimraf lib",
    "prettier": "prettier --write **/*.{ts,js}",
    "build": "rimraf lib && tsc -p tsconfig.json",
    "lint": "tslint -p . -c tslint.json",
    "test": "jest --detectOpenHandles"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/jest": "^24.0.11",
    "@types/node": "^10.5.3",
    "casbin": "^3.0.8",
    "coveralls": "^3.0.2",
    "jest": "^24.9.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.2.0",
    "tslint": "^5.11.0",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "etcd3": "^0.2.13"
  },
  "files": [
    "lib",
    "examples"
  ],
  "homepage": "http://casbin.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/node-casbin/etcd-watcher.git"
  },
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
